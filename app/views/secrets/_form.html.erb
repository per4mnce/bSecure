<!--Used in Edit and New Views-->
<%= form_for @secret do |f| %>
  <div class="form-group">
    <%= f.label 'Type' %>
    <%= f.text_field :catname, autofocus: true,   class: 'form-control', placeholder: "Select category" %>
    
    <%= f.label :description %>
    <%= f.text_field :description,                 class: 'form-control', placeholder: "Enter the description" %>
    
    <%= f.label :username %>
    <%= f.text_field :username,                    class: 'form-control', placeholder: "Enter the username" %>
    
    <%= f.label 'Password' %>
    <%= f.text_field :pw,                          class: 'form-control', placeholder: "Enter the password" %>
    
    <%= f.label :url %>
    <%= f.text_field :url,                         class: 'form-control', placeholder: "Enter the URL" %>
    
    <%= f.label :notes %>
    <%= f.text_area :notes,                        class: 'form-control', placeholder: "Enter notes content", size: "25x5" %>
    
    <p>**bold** _italic_ `code` >quote * - bullet list"</p>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
  <%= link_to "Cancel", secrets_path, class: 'btn btn-success' %>

<% end %>

